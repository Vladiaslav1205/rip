using System;

namespace vvp5
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите трехзначное число: ");
            int a = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Ответ: " + (((a / 1000) == (a % 10))&&(((a / 10) % 10) == ((a / 100) % 10))));
        }
    }
}
