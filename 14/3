using System;

namespace vvp3
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите первое число: ");
            int a = Convert.ToInt32(Console.ReadLine());
            int b = 0;
            int c = 0;
            do
            {
                b++;
                c = c + b;
            }
            while (c < a);
            Console.WriteLine("Наименьшая сумма: "+ c +"; Крайнее слагаемое: "+ b);
        }
    }
}
