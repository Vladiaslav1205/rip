using System;

namespace vvp5
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите число: ");
            int a = Convert.ToInt32(Console.ReadLine());
            string b;
            string c;
            if (a == 0)
                Console.WriteLine("Нулевое число");
            else
            {
                if (a > 0)
                    b = "Положительное ";
                else
                    b = "Отрицательное ";
                if (a % 2 == 0)
                    c = "чётное ";
                else
                    c = "нечётное";
                Console.WriteLine(b + c + "число");
            }
        }
    }
}
